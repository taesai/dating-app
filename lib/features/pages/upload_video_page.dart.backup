                crossAxisAlignment: CrossAxisAlignment.stretch,
                children: [
                  // Plan info card
                  Card(
                    color: widget.currentUser.subscriptionPlan == SubscriptionPlan.premium
                        ? Colors.amber[50]
                        : Colors.blue[50],
                    child: Padding(
                      padding: const EdgeInsets.all(16),
                      child: Column(
