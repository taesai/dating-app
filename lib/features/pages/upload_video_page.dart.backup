class UploadVideoPage extends StatefulWidget {
  final DatingUser currentUser;

  const UploadVideoPage({super.key, required this.currentUser});

  @override
  State<UploadVideoPage> createState() => _UploadVideoPageState();
}

class _UploadVideoPageState extends State<UploadVideoPage> {
  final AppwriteService _appwriteService = AppwriteService();
  final ImagePicker _picker = ImagePicker();
  final TextEditingController _titleController = TextEditingController();
  final TextEditingController _descriptionController = TextEditingController();

  XFile? _videoFile;
  bool _isUploading = false;
  double _uploadProgress = 0.0;

  @override
  void dispose() {
    _titleController.dispose();
    _descriptionController.dispose();
    super.dispose();
  }

  Future<void> _pickVideo() async {
    try {
      final XFile? video = await _picker.pickVideo(
        source: ImageSource.gallery,
      );

      if (video != null) {
        // V√©rifier la dur√©e
        final isValid = await _validateVideoDuration(video);
        if (!isValid) return;

        setState(() {
          _videoFile = video;
        });
      }
    } catch (e) {
      if (mounted) {
        ScaffoldMessenger.of(context).showSnackBar(
          SnackBar(content: Text('Erreur lors de la s√©lection de la vid√©o: $e')),
        );
      }
    }
  }

  Future<void> _recordVideo() async {
    try {
      final XFile? video = await _picker.pickVideo(
        source: ImageSource.camera,
        maxDuration: Duration(seconds: widget.currentUser.subscriptionPlan.maxVideoDuration),
      );

      if (video != null) {
        // V√©rifier la dur√©e
        final isValid = await _validateVideoDuration(video);
        if (!isValid) return;

        setState(() {
          _videoFile = video;
        });
      }
    } catch (e) {
      if (mounted) {
        ScaffoldMessenger.of(context).showSnackBar(
          SnackBar(content: Text('Erreur lors de l\'enregistrement: $e')),
        );
      }
    }
  }

  Future<bool> _validateVideoDuration(XFile video) async {
    try {
      print('üé¨ Validation de la dur√©e de la vid√©o...');

      final VideoPlayerController controller;

      if (kIsWeb) {
        // Sur le web, cr√©er un Blob URL
        final bytes = await video.readAsBytes();
        final blob = Uri.dataFromBytes(bytes, mimeType: 'video/mp4');
        controller = VideoPlayerController.networkUrl(blob);
      } else {
        controller = VideoPlayerController.file(File(video.path));
      }

      await controller.initialize();
      final durationInSeconds = controller.value.duration.inSeconds;
      controller.dispose();

      print('‚è±Ô∏è Dur√©e: $durationInSeconds s / Max: ${widget.currentUser.subscriptionPlan.maxVideoDuration} s');

      if (durationInSeconds > widget.currentUser.subscriptionPlan.maxVideoDuration) {
        if (mounted) {
          ScaffoldMessenger.of(context).showSnackBar(
            SnackBar(
              content: Text(
                'Vid√©o trop longue! Maximum: ${widget.currentUser.subscriptionPlan.maxVideoDuration}s (Dur√©e: ${durationInSeconds}s)',
              ),
              backgroundColor: Colors.red,
              duration: const Duration(seconds: 5),
            ),
          );
        }
        return false;
      }

      return true;
    } catch (e) {
      print('‚ö†Ô∏è Erreur validation dur√©e: $e');
      // En cas d'erreur, autoriser (pour ne pas bloquer)
      return true;
    }
  }

  Future<void> _uploadVideo() async {
    if (_videoFile == null) {
      ScaffoldMessenger.of(context).showSnackBar(
        const SnackBar(content: Text('Veuillez s√©lectionner une vid√©o')),
      );
      return;
    }

    if (_titleController.text.trim().isEmpty) {
      ScaffoldMessenger.of(context).showSnackBar(
        const SnackBar(content: Text('Veuillez entrer un titre')),
      );
      return;
    }

    setState(() {
      _isUploading = true;
      _uploadProgress = 0.0;
    });

    try {
      print('üöÄ D√©but de l\'upload...');

      // Lire les bytes du fichier pour le web
      final bytes = await _videoFile!.readAsBytes();
      print('üì¶ Fichier lu: ${bytes.length} bytes');

      setState(() {
        _uploadProgress = 0.3;
      });

      await _appwriteService.uploadVideo(
        userId: widget.currentUser.id,
        filePath: _videoFile!.path,
        title: _titleController.text.trim(),
        description: _descriptionController.text.trim(),
        fileBytes: bytes,
        fileName: _videoFile!.name,
      );

      print('‚úÖ Upload termin√© avec succ√®s!');

      setState(() {
        _uploadProgress = 1.0;
      });

      if (mounted) {
        ScaffoldMessenger.of(context).showSnackBar(
          const SnackBar(
            content: Text('Vid√©o upload√©e avec succ√®s!'),
            backgroundColor: Colors.green,
          ),
        );
        Navigator.pop(context, true); // Retourner true pour indiquer le succ√®s
      }
    } catch (e, stackTrace) {
      print('‚ùå Erreur upload: $e');
      print('Stack trace: $stackTrace');
      if (mounted) {
        ScaffoldMessenger.of(context).showSnackBar(
          SnackBar(
            content: Text('Erreur lors de l\'upload: $e'),
            backgroundColor: Colors.red,
            duration: const Duration(seconds: 10),
          ),
        );
      }
    } finally {
      if (mounted) {
        setState(() {
          _isUploading = false;
          _uploadProgress = 0.0;
        });
      }
    }
  }

  @override
  Widget build(BuildContext context) {
    final maxDuration = widget.currentUser.subscriptionPlan.maxVideoDuration;
